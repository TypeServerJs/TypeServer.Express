{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "ES6",
      "ES2015",
      "esnext"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}